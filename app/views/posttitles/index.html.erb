<h1>Listing posttitles</h1>

<table>
  <thead>
    <tr>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posttitles.each do |posttitle| %>
      <tr>
        <td><%= posttitle.text %></td>
        <td><%= link_to 'Show', posttitle %></td>
        <td><%= link_to 'Edit', edit_posttitle_path(posttitle) %></td>
        <td><%= link_to 'Destroy', posttitle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Posttitle', new_posttitle_path %>
